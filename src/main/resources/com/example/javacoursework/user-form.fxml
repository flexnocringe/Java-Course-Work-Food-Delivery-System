<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="516.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javacoursework.fxcontrollers.UserForm">
   <children>
      <VBox fx:id="userSelection" layoutX="32.0" layoutY="153.0" spacing="15.0" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="120.0">
         <children>
            <TextField fx:id="usernameField" promptText="username" />
            <TextField fx:id="passwordField" promptText="password" />
            <TextField fx:id="nameField" promptText="name" />
            <TextField fx:id="surnameField" promptText="surname" />
            <TextField fx:id="phoneNumberField" promptText="phone number" />
         </children>
      </VBox>
      <HBox alignment="TOP_CENTER" layoutX="78.0" layoutY="418.0" spacing="75.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="80.0" AnchorPane.rightAnchor="80.0">
         <children>
            <Button fx:id="userCreationButton" mnemonicParsing="false" onAction="#createNewUser" text="Create new user" />
            <Button fx:id="updateUserButton" mnemonicParsing="false" onAction="#updateUser" text="Update user" />
         </children>
      </HBox>
      <HBox layoutX="50.0" layoutY="95.0" spacing="85.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="50.0">
         <children>
            <RadioButton fx:id="adminRadio" mnemonicParsing="false" onAction="#disableFields" text="Admin">
               <toggleGroup>
                  <ToggleGroup fx:id="userTypeSelecion" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="userRadio" mnemonicParsing="false" onAction="#disableFields" selected="true" text="User" toggleGroup="$userTypeSelecion" />
            <RadioButton fx:id="restaurantRadio" mnemonicParsing="false" onAction="#disableFields" text="Restaurant" toggleGroup="$userTypeSelecion" />
            <RadioButton fx:id="driverRadio" mnemonicParsing="false" onAction="#disableFields" text="Driver" toggleGroup="$userTypeSelecion" />
         </children>
      </HBox>
      <TextField fx:id="addressField" layoutX="30.0" layoutY="318.0" promptText="address" />
      <ComboBox fx:id="vechicleTypeBox" layoutX="210.0" layoutY="160.0" prefWidth="150.0" promptText="vechicle type" />
      <TextField fx:id="drivingLicenceField" layoutX="210.0" layoutY="120.0" promptText="driving licence" />
      <TextField fx:id="workHoursField" layoutX="30.0" layoutY="357.0" promptText="work hours" />
      <DatePicker fx:id="bDateSelector" layoutX="210.0" layoutY="200.0" promptText="birth date" />
   </children>
</AnchorPane>
