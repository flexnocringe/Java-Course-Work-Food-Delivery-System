<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="516.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javacoursework.fxcontrollers.UserForm">
   <children>
      <Text layoutX="261.0" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Redirect works" />
      <Button fx:id="redirectToLogIn" layoutX="248.0" layoutY="430.0" mnemonicParsing="false" onAction="#goToLogin" text="Go back to login" />
      <RadioButton fx:id="userRadio" layoutX="165.0" layoutY="95.0" mnemonicParsing="false" onAction="#disableFields" selected="true" text="User">
         <toggleGroup>
            <ToggleGroup fx:id="userTypeSelecion" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="adminRadio" layoutX="50.0" layoutY="95.0" mnemonicParsing="false" onAction="#disableFields" text="Admin" toggleGroup="$userTypeSelecion" />
      <RadioButton fx:id="restaurantRadio" layoutX="261.0" layoutY="95.0" mnemonicParsing="false" onAction="#disableFields" text="Restaurant" toggleGroup="$userTypeSelecion" />
      <RadioButton fx:id="driverRadio" layoutX="427.0" layoutY="95.0" mnemonicParsing="false" text="Driver" toggleGroup="$userTypeSelecion" />
      <Button layoutX="249.0" layoutY="396.0" mnemonicParsing="false" text="Create new user" />
      <AnchorPane fx:id="inputFields" layoutX="50.0" layoutY="129.0" prefHeight="290.0" prefWidth="149.0">
         <children>
            <TextField fx:id="nameField" layoutY="70.0" promptText="name" />
            <TextField fx:id="surnameField" layoutY="109.0" promptText="surname" />
            <TextField fx:id="passwordField" layoutY="35.0" promptText="password" />
            <TextField fx:id="phoneNumberField" layoutY="148.0" promptText="phone number" />
            <TextField fx:id="addressField" layoutY="186.0" promptText="address" />
            <TextField fx:id="usernameField" promptText="username" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
