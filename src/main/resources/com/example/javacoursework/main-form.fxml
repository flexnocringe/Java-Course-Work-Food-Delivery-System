<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javacoursework.fxcontrollers.MainForm">
   <children>
      <TabPane fx:id="managementTabsPane" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <tabs>
          <Tab fx:id="userManagementTab" onSelectionChanged="#reloadTableData" text="User management">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="191.0" prefWidth="282.0">
                     <children>
                        <TableView fx:id="userTable" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="574.0">
                          <columns>
                            <TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
                            <TableColumn fx:id="userTypeColumn" prefWidth="75.0" text="User Type" />
                              <TableColumn fx:id="usernameColumn" prefWidth="75.0" text="Username" />
                              <TableColumn fx:id="passwordColumn" prefWidth="75.0" text="Password" />
                              <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="surnameColumn" prefWidth="75.0" text="Surname" />
                              <TableColumn fx:id="dummyColumn" prefWidth="75.0" text="Action" />
                          </columns>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="ordersManagementTab" onSelectionChanged="#reloadTableData" text="Orders management">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab fx:id="foodManagementTab" onSelectionChanged="#reloadTableData" text="Food management">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab fx:id="altUserManagement" onSelectionChanged="#reloadTableData" text="Alternative User management">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Button layoutX="114.0" layoutY="318.0" mnemonicParsing="false" onAction="#addNewUser" text="Add new user" />
                        <ListView fx:id="userListView" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="575.0" />
                        <Button layoutX="260.0" layoutY="318.0" mnemonicParsing="false" onAction="#updateExistingUser" text="Update user" />
                        <Button layoutX="418.0" layoutY="318.0" mnemonicParsing="false" onAction="#deleteSelectedUser" text="Delete user" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
